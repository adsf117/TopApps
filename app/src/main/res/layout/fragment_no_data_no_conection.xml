<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_noconection"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_file_cloud_off" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/no_data_avalible"
            android:id="@+id/nameApp"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:layout_below="@+id/image_noconection"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/upps"
            android:id="@+id/textView2"
            android:textColor="@color/colorAccent"
            android:textSize="35dp"
            android:layout_above="@+id/image_noconection"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/try_again"
            android:id="@+id/tryagain"
            android:layout_marginTop="52dp"
            android:layout_below="@+id/nameApp"
            android:layout_centerHorizontal="true" />
</RelativeLayout>